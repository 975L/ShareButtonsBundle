{% set urlFinal = app.request.uri %}
{% if url != null %}
	{% set urlFinal = url %}
{% endif %}
<a href="{{ path('sharebuttons_share', {'url': urlFinal|url_encode|url_encode, 'share': share}) }}" onclick="sharePopup(this.href); return false;" class="btn btn-share btn-{{ share }}" title="{{ share|capitalize }}" role="button" rel="nofollow">
	{% if displayIcon == true %}
		<img src="{{ absolute_url(asset('bundles/c975lsharebuttons/images/' ~ share ~ '.svg')) }}">
	{% endif %}
	{% if displayText == true %}
		{{ share|capitalize}}
	{% endif %}
</a>